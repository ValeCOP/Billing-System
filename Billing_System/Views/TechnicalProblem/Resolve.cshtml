@model ResolveTechProblem

@{
    ViewData["Title"] = "Resolve - TechProblem";
}

<h2><i class="fa-solid fa-triangle-exclamation"></i> Solve TechProblem</h2>
    <hr />
<div class="row shadow-lg p-3">
        <div class="shadow-lg col-md-4 p-3">
        <h4>Solve problem</h4>@if (TempData["message"] != null)
        {
            <div class="alert alert-success" id="alert">
                <label>✔</label>
                @TempData["message"]
            </div>
        }
            <hr />
            <form asp-action="Resolve">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Solution" class="control-label"></label>
                    <textarea asp-for="Solution" class="form-control" id="Description"></textarea>
                    <span asp-validation-for="Solution" class="text-danger"></span>
                </div>
                @if(Model.ClientEmail != null || Model.ClientEmail != string.Empty)
                {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <label asp-for="SendMailToClient" class="form-check-label"></label>
                        <input class="form-check-input" asp-for="SendMailToClient"  />
                    </label>
                </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ClientEmail" hidden />
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ClientName" hidden />
                        </label>
                    </div>
                }
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Solved" checked hidden />
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Resolve" class="btn btn-outline-primary mt-2" />
                </div>
            </form>
        </div>
        <div class="col-md-8 shadow-lg p-3">
            <h4>Problem info</h4>
            <hr />
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RegisteredOn)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RegisteredOn)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClientName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClientName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClientEmail)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClientEmail)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClientPhone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClientPhone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClientAddress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClientAddress)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.RegisterProblemUserName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RegisterProblemUserName)
                    </dd>
                </dl>
                <hr />
            </div>
        </div>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
